{{#if session.isAuthenticated}}
  <button
    class="ui {{if supported 'active '}} green button js-support-proposal"
    {{disabled}}
    {{action 'toggleSupport'}}>
    {{text}}
  </button>
{{else}}
  <button class="ui disabled green button js-support-proposal">Support it</button>
  <!--
  disabled button signalling you need to be logged in to support a proposal,
  perhaps with a tooltip on hover explaining that
  -->
{{/if}}

{{support-count proposal=proposal}}
